/* STYLES */

html,
body
  font-size: $basic_font_size
  font-family: 'Roboto','Proza Libre', 'Source Sans Pro', Arial,  sans-serif

/* Headers */
h1
  font-size: 4.4em
  font-family: lft-etica
  font-weight: bold
  padding: 1rem 2rem

h2
  font-size: 3.333em
  font-weight: bold
  font-family: lft-etica
  text-transform: uppercase
  padding: 0.75rem 2rem

h3
  font-size: 3em
  padding: 0.66rem 2rem

h4
  font-size: 2.25em
  padding: 0.55rem 2rem

/* Basic Elements */
p
  font-size: 1.8rem
  line-height: 1em
  padding: 0.75em 1em

a
  display: inline-block

a[href]
  color: $blue
  position: relative
  /* To data-tooltip */
  text-decoration: none
  border-bottom: 0.2rem
  border-style: dashed

  &:hover
    border-style: solid

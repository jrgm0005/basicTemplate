table
  border-collapse: collapse
  border-spacing: 0

img
  display: block
  border: 0
  max-width: 90%
  margin: 2rem auto

input[type="text"]
  border-radius: 0.33rem
  min-height: 2rem
  margin: 1rem

blockquote
  background: #f9f9f9
  border-left: 2rem solid #ccc
  border-left: 2rem solid $green_blackquote
  margin: 1.5rem 3rem
  padding: 0.5rem 1.5rem
  quotes: "\201C""\201D""\2018""\2019"

blockquote:before
  color: #ccc
  color: #070
  content: open-quote
  font-size: 5em
  line-height: 0.25em
  margin-right: 0.2rem
  vertical-align: -0.4em

blockquote p
  display: inline
  font-size: 1.75em

/* clearfix */
.clearfix:after
  content: "."
  display: block
  clear: both
  visibility: hidden
  line-height: 0
  height: 0

.clearfix
  display: inline-block

html[xmlns] .clearfix
  display: block

* html .clearfix
  height: 1%

/* clearfix END */
/* Borders */
.shine_blue:focus
  box-shadow: 0px 0px 5px $blue
  border: 1px solid rgba(0, 0, 255, 0.8)

.shine_light_green:focus
  box-shadow: 0px 0px 5px $shine_light_green_color
  border: 1px solid $shine_light_green_color

/* Borders END */
/* Buttons */
/* ANIMATED BUTTON */
.button
  display: inline-block
  padding: 1.5rem 2.5rem
  margin: 1rem
  font-size: 2.4em
  cursor: pointer
  text-align: center
  text-decoration: none
  outline: none
  color: #fff
  background-color: blue
  border: none
  border-radius: 1.5rem
  box-shadow: 0 9px #999

.button:hover
  background-color: #00A

.button:active
  background-color: #008
  box-shadow: 0 5px #666
  transform: translateY(4px)

/* ANIMATED BUTTON */
.btn_default
  font-size: 1em
  margin: 2%
  text-decoration: none
  padding: 1rem 2rem
  border: none
  border-radius: 1rem 0.5rem

.btn_default:hover
  border: none
  border-radius: 1rem 1rem 0 1rem

.btn_azul
  background: none repeat scroll 0% 0% #0059B3

/* Buttons END */
/* utils class */
.strong
  font-weight: bold

 Custom text selection
  ::selection { background: #e2eae2; }
  ::-moz-selection { background: #e2eae2; }
  ::-webkit-selection { background: #e2eae2; }

@css{
  .transparent{
    filter: alpha(opacity=40);
    /* internet explorer */
    -khtml-opacity: 0.4;
    /* khtml, old safari */
    -moz-opacity: 0.4;
    /* mozilla, netscape */
    opacity: 0.4;
    /* fx, safari, opera */
  }
}


